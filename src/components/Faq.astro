<style>
  .faq {
    display: flex;
    justify-content: center;
    gap: 2rem;
    width: 100%;
    padding: 7.5rem 2.5%;
    
  }
  
  .faq-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    max-width: 1200px;
  }

  .headings {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    min-width: fit-content;
  }

  h2 {
    font-family: serif;
    font-size: 48px;
    font-weight: 400;
    line-height: 1.15;
    color: var(--black);
  }

  span {
    font-weight: 600;
  }

  .subheading {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 1rem;
    width: 30ch;
    line-height: 1.25;
  }
  .faq-button {
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--black);
    background-color: none;
    width: fit-content;
    padding: 1rem 1.5rem;
    text-decoration: none;
    border: 1px solid var(--black);
    border-radius: 6.25px;
    max-width: fit-content;
  }

  .faq-button:hover {
  background-color: var(--primary);
  border: 1px solid var(--primary);
  color: var(--white);
}
  
@media (min-width: 992px) and (max-width: 1200px) {
  .faq {
    padding: 5rem 2.5% 15rem;
  }
}

@media (min-width: 768px) and (max-width: 992px) {
  .faq {
    gap: 2rem;
    padding: 5rem 2.5%;
  }
}

@media  (max-width: 768px) {
  .faq {
    padding: 5rem 2.5%;
  }

  .faq-wrapper {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
}

</style>

<style lang="scss" is:global>

 
  body .accordion__item {
    border: none;
    button {
      background-color: transparent;
      border: none;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      font-size: 1.25rem;
      font-weight: 400;
      color: var(--black);
      border: none;
      &:hover
      &:focus {
        background-color: var(--primary);
      }
    }

    p {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      font-size: 1rem;
      font-weight: 400;
      color: var(--black);
    }

    &.is-active button {
      background-color: var(--primary);
      color: var(--white);
    }
  }
</style>