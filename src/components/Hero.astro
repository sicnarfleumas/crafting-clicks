---
import Image from "astro/components/Image.astro"
import HeroImage from "../assets/images/hero-image.png"

import CTA from "./buttons/Primary.astro"
---

<section class="hero">

  <div class="hero-wrapper">

    <div class="left">
      <h1>Elevating Brands through <span>Digital Experiences</span></h1>
      <p>Crafting Clicks for <span class="primary">Businesses</span></p>
      <CTA text="Free Discovery Call"/>
    </div>
    <div class="right">
      <Image src={HeroImage} alt="Happy Business Owner" width={600} loading="eager" class="hero-img"/>
    </div>
  </div>

</section>

<style>

  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding: 2.5rem 2.5%;
    
  }
  
  .hero-wrapper {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1200px;
  }
  .left {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  h1 {
    font-family: serif;
    font-size: 3rem;
    font-weight: 400;
    line-height: 1.15;
    width: 25ch;
    color: var(--black);
  }

  span {
    font-weight: 600;
  }

  p {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-style: italic;
    font-weight: 400;
    font-size: 1.25rem;
    color: var(--black);
  }

  .primary {
    color: var(--primary);
  }

  @media (min-width: 992px) and (max-width: 1200px) {
    .hero-wrapper {
      padding: 7.5rem 2.5%;
    }
    
}

@media (min-width: 768px) and (max-width: 992px) {
    .hero-wrapper {
      gap: 2rem;
      padding: 7.5rem 2.5%;
    }

    h1 {
      font-size: 2.5rem;
    }
    
}

@media (min-width: 600px) and (max-width: 768px) {
    .hero-wrapper {
      gap: 2rem;
      padding: 7.5rem 2.5%;
    }

    h1 {
      font-size: 2rem;
    }

    .hero-wrapper {
      flex-direction: column;
      width: 100%;
      max-width: 100%;
      margin: 0;
      padding: 0;
    }
    
}

@media (max-width: 600px) {
    

    h1 {
      font-size: 2rem;
    }

    .hero-wrapper {
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;
      width: 100%;
      max-width: 100%;
      margin: 0;
      padding: 0;
      gap: 2rem;
    }

    

    h1 {
      font-size: 2.5rem;
      text-align: center;
    }

    p {
      text-align: center;
    }

    .left {
      align-items: center;
    }

    .right {
      align-items: center;
    }

    
}
</style>