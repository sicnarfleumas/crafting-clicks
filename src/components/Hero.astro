---
import Image from "astro/components/Image.astro"
import HeroImage from "../assets/images/hero-image.png"

import CTA from "./buttons/Primary.astro"
---

<section class="hero">

    <div class="left">
      <h1>Elevating Brands through <span>Digital Experiences</span></h1>
      <p>Crafting Clicks for <span class="primary">Businesses</span></p>
      <CTA text="Free Discovery Call"/>
    </div>
    <div class="right">
      <Image src={HeroImage} alt="Happy Business Owner" width={600} loading="eager"/>
    </div>

</section>

<style>

  .hero {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 5rem 0;
  }

  .left {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  h1 {
    font-family: serif;
    font-size: 48px;
    font-weight: 400;
    line-height: 1.15;
    width: 25ch;
    color: var(--black);
  }

  span {
    font-weight: 600;
  }

  p {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-style: italic;
    font-weight: 400;
    font-size: 1.25rem;
    color: var(--black);
  }

  .primary {
    color: var(--primary);
  }
</style>